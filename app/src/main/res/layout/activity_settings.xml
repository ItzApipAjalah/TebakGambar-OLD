<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_all"
    android:launchMode="singleTask"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="-50dp"
        android:src="@drawable/logo2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PENGATURAN"
        android:textSize="30sp"
        android:layout_marginTop="-40dp"
        android:layout_gravity="center"
        android:textColor="@color/red"
        android:id="@+id/judul"
        android:fontFamily="@font/jura_semibold"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Mute Music"
        android:textColor="@color/black"
        android:background="@drawable/kotak"
        android:id="@+id/mute"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="UNMute Music"
        android:textColor="@color/black"
        android:background="@drawable/kotak"
        android:id="@+id/unmute"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settingan ini Akan Terreset ketika kembali kemenu awal"
        android:textColor="@color/red"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/jura_semibold"
        android:id="@+id/penjelasan"
        android:textSize="20dp"
        />
</LinearLayout>